{
  "extends": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {}
  },
  "rules": {
    "semi": 2,

    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "printWidth": 120
      }
    ]
  },

  "plugins": ["prettier"]
}
